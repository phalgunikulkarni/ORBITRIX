import 'package:flutter/material.dart';
import 'package:latlong2/latlong.dart';
import '../services/traffic_density_service.dart';

/// Class to represent a route segment with traffic density information
class RouteSegment {
  final LatLng start;
  final LatLng end;
  final DensityLevel trafficDensity;

  RouteSegment(this.start, this.end, this.trafficDensity);

  Color get color {
    switch (trafficDensity) {
      case DensityLevel.low:
        return Colors.green;
      case DensityLevel.moderate:
        return Colors.orange;
      case DensityLevel.high:
        return Colors.red;
      default:
        return Colors.blue;  // Default color for unknown density
    }
  }
}
      default:
        return Colors.blue;  // Default color for unknown density
    }
  }
}
    }
  }
}